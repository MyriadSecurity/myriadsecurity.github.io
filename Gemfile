source "https://rubygems.org"

# Core Jekyll
gem "jekyll", "~> 4.3"
gem "webrick", "~> 1.8"   # needed for local `jekyll serve` on Ruby 3

# Remote theme
gem "jekyll-remote-theme", "~>0.4.3"

# Common plugins GitHub Pages normally enables
gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-seo-tag"
gem "jekyll-paginate"
gem "jekyll-mentions"
gem "jekyll-include-cache"
gem "jekyll-redirect-from"
gem "jekyll-optional-front-matter"
gem "jekyll-readme-index"
gem "jekyll-default-layout"
gem "jekyll-titles-from-headings"
gem "jekyll-commonmark-ghpages"
gem "jekyll-coffeescript"
gem "jekyll-gist"

# Sass: switch from deprecated Ruby Sass to Dart Sass
gem "sass-embedded"                  # Dart Sass binary
gem "jekyll-sass-converter", "~> 3"  # connects Jekyll to Dart Sass

